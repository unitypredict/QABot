# QABot Configuration Template
# Copy this file to config.env and update with your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Hugging Face Hub API Configuration
HUGGINGFACEHUB_API_TOKEN=your-huggingface-token-here

# Model Configuration
OPENAI_MODEL=gpt-4o
TEMPERATURE=0

# Vector Store Configuration
VECTOR_STORE_PATH=../VectorStores
SOURCES_PATH=../Sources

# Training Configuration
MIN_CHUNK_SIZE=100
BREAKPOINT_THRESHOLD_TYPE=percentile
BREAKPOINT_THRESHOLD_AMOUNT=95

# UnityPredict Configuration
TARGET_REPOSITORY_ID=your-unitypredict-repository-id-here 